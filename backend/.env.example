# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# For local development: mongodb://localhost:27017/tasky
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tasky

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================

# Secret key for signing JWT tokens (use a strong, random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT token expiration time
# Format: time expression (e.g., "7d", "24h", "60m")
JWT_EXPIRES_IN=7d

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server port (default: 4000)
PORT=4000

# Node environment: development, production, test
NODE_ENV=development

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Allowed origins for CORS requests (comma-separated or single URL)
# Examples:
# - http://localhost:5173
# - http://localhost:5173,http://localhost:3000
# - https://tasky.example.com
CORS_ORIGIN=http://localhost:5173

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Log level: error, warn, info, debug
LOG_LEVEL=debug

# Enable audit trail logging (logs all requests to audit.log)
AUDIT_LOG_ENABLED=true

# ============================================================================
# RATE LIMITING (requests per time window)
# ============================================================================

# General API rate limit (requests per 15 minutes)
RATE_LIMIT_GENERAL_MAX=300

# Authentication rate limit (login attempts per 15 minutes)
RATE_LIMIT_AUTH_MAX=5

# Registration rate limit (signup attempts per hour)
RATE_LIMIT_REGISTER_MAX=3

# Search rate limit (search requests per minute)
RATE_LIMIT_SEARCH_MAX=30

# Write operations rate limit (POST/PUT/PATCH/DELETE per 5 minutes)
RATE_LIMIT_WRITE_MAX=50

# ============================================================================
# SECURITY HEADERS
# ============================================================================

# Maximum request body size (e.g., "1mb", "10mb")
MAX_REQUEST_SIZE=1mb

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================

# Session timeout in milliseconds (86400000 = 24 hours)
SESSION_TIMEOUT=86400000

# ============================================================================
# OPTIONAL: EMAIL CONFIGURATION (for future features)
# ============================================================================

# SMTP server for sending emails
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@tasky.app

# ============================================================================
# OPTIONAL: FILE STORAGE (for future features)
# ============================================================================

# Cloud storage service: local, s3, gcp
# FILE_STORAGE_TYPE=local
# FILE_STORAGE_PATH=./uploads

# ============================================================================
# OPTIONAL: ANALYTICS (for future features)
# ============================================================================

# Enable analytics tracking
# ANALYTICS_ENABLED=false
# ANALYTICS_KEY=your-analytics-key
